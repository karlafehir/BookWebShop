@model List<Product>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus"></i>Create new product
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" class="btn">
                            <i class="bi bi-pen-fill"></i>
                            Edit
                        </a>
                        <a asp-controller="Product" asp-action="Delete" class="btn">
                            <i class="bi bi-trash3-fill"></i>
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
